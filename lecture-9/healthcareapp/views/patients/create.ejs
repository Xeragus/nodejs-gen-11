<%- include('../partials/header') %>
<div style="background-color: rgb(230, 230, 230)">
  <% if (typeof error != 'undefined') { %>
  <div class="alert alert-danger" role="alert"><%= error %></div>
  <% } %>
  <div
    class="card text-white bg-success mb-3"
    style="max-width: 18rem; margin: auto; text-align: center"
  >
    <div class="card-body">
      <form action="/patients" method="POST">
        <div class="mb-3">
          <label for="ssn" class="form-label">SSN</label>
          <input
            type="text"
            class="form-control"
            id="ssn"
            name="ssn"
            value="<%= typeof ssn != 'undefined' ? ssn : '' %>"
          />
        </div>
        <div class="mb-3">
          <label for="full_name" class="form-label">Full Name</label>
          <input
            type="text"
            class="form-control"
            id="full_name"
            name="full_name"
            value="<%= typeof full_name != 'undefined' ? full_name : '' %>"
          />
        </div>
        <div class="mb-3">
          <label for="age" class="form-label">Age</label>
          <input
            type="text"
            class="form-control"
            id="age"
            name="age"
            value="<%= typeof age != 'undefined' ? age : '' %>"
          />
        </div>
        <div class="mb-3">
          <label for="phone_number" class="form-label">Phone Number</label>
          <input
            type="text"
            class="form-control"
            id="phone_number"
            name="phone_number"
            value="<%= typeof phone_number != 'undefined' ? phone_number : '' %>"
          />
        </div>
        <div class="mb-3">
          <label for="city" class="form-label">City</label>
          <input
            type="text"
            class="form-control"
            id="city"
            name="city"
            value="<%= typeof city != 'undefined' ? city : '' %>"
          />
        </div>
        <div class="mb-3">
          <select class="select-doctor form-control" name="doctor">
            <option></option>
            <% doctors.forEach(doctor => { %>
              <option value="<%= doctor._id %>"><%= doctor.full_name %></option>
            <% }) %>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
